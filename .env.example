# ‚ö†Ô∏è NEVER COMMIT THIS FILE WITH REAL VALUES
# Copy this file to .env and fill in with your actual values
# Add .env to .gitignore (already done)

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URLs
FRONTEND_URL=http://localhost:5173
DASHBOARD_URL=http://localhost:5174

# JWT Configuration
JWT_EXPIRES_IN=10d
COOKIE_EXPIRES_IN=30
ACCESS_TOKEN_EXPIRES_IN=3d
REFRESH_TOKEN_EXPIRES_IN=10d

# ‚úÖ GENERATE NEW SECRETS - DO NOT USE THESE VALUES
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET_KEY=CHANGE_ME_GENERATE_NEW_SECRET
JWT_SECRET_KEY_ACCESS=CHANGE_ME_GENERATE_NEW_SECRET
JWT_SECRET_KEY_REFRESH=CHANGE_ME_GENERATE_NEW_SECRET

# Database Configuration
DB_USER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_PASSWORD=CHANGE_ME_YOUR_DB_PASSWORD
DB_NAME=Mern_Ecommerce_Store

# Email Configuration (Gmail)
SMTP_SERVICE=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_MAIL=YOUR_EMAIL@gmail.com
SMTP_PASSWORD=YOUR_EMAIL_APP_PASSWORD

# Google Gemini API
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=CHANGE_ME_YOUR_GEMINI_API_KEY

# bKash Payment Gateway
BKASH_APP_KEY=CHANGE_ME_YOUR_BKASH_APP_KEY
BKASH_APP_SECRET=CHANGE_ME_YOUR_BKASH_APP_SECRET
BKASH_BASE_URL=https://tokenized.sandbox.bkash.com

# Nagad Payment Gateway
NAGAD_APP_KEY=CHANGE_ME_YOUR_NAGAD_APP_KEY
NAGAD_APP_SECRET=CHANGE_ME_YOUR_NAGAD_APP_SECRET

# Rocket Payment Gateway
ROCKET_APP_KEY=CHANGE_ME_YOUR_ROCKET_APP_KEY
ROCKET_APP_SECRET=CHANGE_ME_YOUR_ROCKET_APP_SECRET

# Cloudinary Image Storage
# Get from: https://cloudinary.com/console/settings/api-keys
CLOUDINARY_CLIENT_NAME=CHANGE_ME_YOUR_CLOUDINARY_NAME
CLOUDINARY_CLIENT_API=CHANGE_ME_YOUR_CLOUDINARY_API_KEY
CLOUDINARY_CLIENT_SECRET=CHANGE_ME_YOUR_CLOUDINARY_SECRET

# üîç Error Tracking & Monitoring (Sentry)
# Get from: https://sentry.io
# Leave blank to disable error tracking
SENTRY_DSN=CHANGE_ME_YOUR_SENTRY_DSN

# Optional: Cookie Domain (for cross-domain cookies)
COOKIE_DOMAIN=localhost
